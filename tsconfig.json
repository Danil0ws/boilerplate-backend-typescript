{
  "compilerOptions": {
    "outDir": "out",
    "module": "commonjs",
    "target": "es2017",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "paths": {
      "~/tests/*": ["../tests/*"],
      "~/*": ["*"]
    }
  },
  "include": ["src", "tests"],
  "exclude": []
}